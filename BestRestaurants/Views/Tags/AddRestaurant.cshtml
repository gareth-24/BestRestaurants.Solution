@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Tag

<h2>Add a restaurant</h2>

<h4>Add a restaurant to this Tag: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TagId)

    @Html.Label("Select restaurant")
    @Html.DropDownList("RestaurantId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>